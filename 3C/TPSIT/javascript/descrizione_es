----Cosa trovo nei vari es già svolti:----

	--ES. POPUP BENVENUTO (Inserisco nome e cognome --> alert e scrivo in un div già presente)--
		document.querySelector("#Nome_Della_Cassela_Input")
		document.getelementById("Nome_Dato_Al_Div_Creato_Nell_Index").innerHTML = message;

	--ES. INSERISCI E RIMUOVI SELECT (Inserisco e rimovo opzioni da una select)--
		document.querySelector("input[type='text']").value
		document.createElement("option")
		miaSelect.options.add(nuovaOpzione, 0)

	--ES. CARRELLO ELETTRONICO (Aggiugno la quantita e la descrizione)--
		document.querySelector("#" + mioButton.id + "Nome").innerText
		let nuovoElemento=document.createElement("div")
		nuovoElemento.innerText="Quantità: " + quantita + " | Descrizione: " + nome 
		document.querySelector("#carrello").appendChild(nuovoElemento)

	--ES. FOR E FOR EACH (Cambio le scritte negli input text)
		document.querySelectorAll("input[type='text']")
		//ciclo for - colori
		for(let i=0; i<casellaTesto.length; i++) {
			casellaTesto[i].style.backgroundColor = "red";
			casellaTesto[i].style.color = "yellow";
		}
		//for each - scrivo dentro
		casellaTesto.forEach(
			function (element, index){
				element.value="ITIS RIVOIRA"
			}
		)

	--ES. IMMAGGINI (Scorre tra le immagini)--
		setAttribute

	--ES. FORM (Compilare e controlli, alert e stampo in un div già presente !)--
		controlli vuoto o solo numero....
		document.getElementById("datiWeb").innerHTML = datiInseriti;

