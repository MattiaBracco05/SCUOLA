<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Link Bootstrap -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <title>5L Bracco Risultati</title>

  <!-- Inzio dello stile CSS per la tabella -->
  <style>
    body {
      padding: 20px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }
    th {
      background-color: #f2f2f2;
    }
  </style>
  <!-- Fine dello stile CSS per la tabella -->

</head>
<body class="container">

  <h1 class="mt-4">Risultati</h1>
  
  <!-- Inizio tabella dei risultati registrati -->
  <table class="table">
    <!-- Inizio dell'intestazione -->
    <thead>
      <tr>
        <th>Nome Videogioco</th>
        <th>Punteggio</th>
      </tr>
    </thead>
    <!-- Fine dell'intestazione -->
    <!-- Inizio dei dati -->
    <tbody>
      <% punteggi.forEach(item => { %>
        <tr>
          <td><%= item.nomeGioco %></td>
          <td><%= item.punteggioGioco %></td>
        </tr>
      <% }); %>
    </tbody>
    <!-- Fine dei dati -->
  </table>
  <!-- Fine della tabella dei risultati registrati -->

  <!-- Punteggio massimo -->
  <p class="lead">Punteggio massimo: <%= maxpunteggioGioco %> (Videogioco: <%= maxpunteggioGiocoGame %>)</p>
</body>
</html>
